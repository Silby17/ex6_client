<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Slider?>


<?import javafx.geometry.Insets?>
<VBox fx:id="vbConnect" alignment="CENTER" spacing="10.0" styleClass="vbLogin"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.loginController" prefWidth="400"
      prefHeight="250">

    <children>
        <Label fx:id="lblLogin" styleClass="mainTitle"
               text="Add a new Movie" />
        <TextField fx:id="tfCode" promptText="Code " />
        <TextField fx:id="tfName" promptText="Name" />
        <TextField fx:id="tflength" promptText="Length" />
        <TextField fx:id="tfyear" promptText="Year" />

        <Label fx:id="ratelab" styleClass="lblRate" text="Rate the movie 0-10"/>
        <Slider fx:id="sldrRating" max="10.0" min="0" majorTickUnit="5"
                showTickLabels="true" showTickMarks="true"/>
        <TextField fx:id="tfDescr" promptText="Description"/>
        <Button fx:id="btnDone" styleClass="button" text="Add">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin></Button>
    </children>
</VBox>