<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="vbConnect" alignment="CENTER" prefHeight="250" prefWidth="400"
      spacing="10.0" styleClass="vbLogin" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.loginController">

    <children>
        <Label fx:id="lblLogin" styleClass="mainTitle" text="Add a new Movie">
            <font>
                <Font size="17" />
            </font>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
        </Label>
        <TextField fx:id="tfCode" promptText="Code ">
         <VBox.margin>
            <Insets left="5.0" right="5.0" />
         </VBox.margin></TextField>
        <TextField fx:id="tfName" promptText="Name">
         <VBox.margin>
            <Insets left="5.0" right="5.0" />
         </VBox.margin></TextField>
        <TextField fx:id="tflength" promptText="Length">
         <VBox.margin>
            <Insets left="5.0" right="5.0" />
         </VBox.margin></TextField>
        <TextField fx:id="tfyear" promptText="Year">
         <VBox.margin>
            <Insets left="5.0" right="5.0" />
         </VBox.margin></TextField>

        <Label fx:id="ratelab" styleClass="lblRate" text="Rate the movie 0-10" />
        <Slider fx:id="sldrRating" majorTickUnit="5" max="10.0" min="0"
                showTickLabels="true" showTickMarks="true">
         <VBox.margin>
            <Insets left="5.0" right="5.0" />
         </VBox.margin></Slider>
        <TextField fx:id="tfDescr" promptText="Description">
         <VBox.margin>
            <Insets left="5.0" right="5.0" />
         </VBox.margin></TextField>


        <HBox alignment="CENTER" spacing="10">
            <children>
                <CheckBox fx:id="cbDrama" text="Drama" />
                <CheckBox fx:id="cbSciFi" mnemonicParsing="false" text="Sci-Fi" />
                <CheckBox fx:id="cbAction" mnemonicParsing="false" text="Action" />
                <CheckBox fx:id="cdComedy" mnemonicParsing="false" text="Comedy" />
            </children>
        </HBox>

        <Button fx:id="btnDone" styleClass="button" text="Add">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin></Button>
    </children>
</VBox>
