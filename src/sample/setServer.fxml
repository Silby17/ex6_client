<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<GridPane fx:id="serverGrid" alignment="center" hgap="10" prefHeight="225.0"
          prefWidth="358.0" vgap="10" xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="sample.mainController">

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>

    <VBox fx:id="VbLogin" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0"
          styleClass="VbLogin" GridPane.columnIndex="2" xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1">

        <children>
            <Label fx:id="lblLogin" styleClass="mainTitle"
                   text="Please enter server details" />

        <TextField fx:id="tfIP" prefHeight="25.0" prefWidth="20.0"
                   promptText="IP" styleClass="txt2" />

        <TextField fx:id="tfSocket" promptText="PORT"
                   styleClass="txt2" />

        <Button fx:id="btnSave" mnemonicParsing="false" prefHeight="38.0"
                prefWidth="95.0" styleClass="txt2" text="Save" />


    </children>
</VBox>
        </children>
        </GridPane>