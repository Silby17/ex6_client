<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="vbConnect" alignment="CENTER" spacing="10.0" styleClass="vbLogin"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.connectionController" prefWidth="250"
      prefHeight="200">

    <children>
        <Label fx:id="lblLogin" styleClass="mainTitle"
               text="Please enter server details" />

        <TextField fx:id= "tfIP" text="127.0.0.1" styleClass="txt" />
        <TextField fx:id="tfSocket" text="5678" styleClass="txt" />
        <Button fx:id="btnConnect" text="Save" styleClass="button" />
    </children>
</VBox>